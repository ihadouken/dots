super + p; slash
	dtos-help

# Emacs
super + e; d
	$MYEMACS
super + e; b
	$MYEMACS --eval '(ibuffer)'
super + e; e
	$MYEMACS --eval '(dired nil)'
super + e; c
	$MYEMACS --eval '(erc)'
super + e; r
	$MYEMACS --eval '(elfeed)'
super + e; s
	$MYEMACS --eval '(eshell)'
super + e; t
	$MYEMACS --eval '(+vterm/here nil)'
super + e; w
	$MYEMACS --eval '(doom/window-maximize-buffer(eww "google.com"))'
super + e; m
	$MYEMACS --eval '(emms)' --eval '(emms-play-directory-tree "~/Music/")'

# Miscellaneous
super + shift + s
	echo "$(xsel)" | tts
ctrl + shift + t
	$MYTERM -t scratchpad
shift + Print
	screenshot.sh

