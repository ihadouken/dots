# Reload config
super + r
	kill -s SIGUSR1 $(pidof sxhkd)

# System
ctrl + alt + s
	shutdown now && paplay '/usr/share/sounds/freedesktop/stereo/service-logout.oga'
ctrl + alt + r
	shutdown -r now && paplay '/usr/share/sounds/freedesktop/stereo/service-logout.oga'
ctrl + alt + z
	systemctl suspend-then-hibernate
ctrl + alt + l
	slock

# Windows
super + i
	invert-win-color.sh
super + Escape
	xkill

# Rofi
alt + Tab
	rofi -show window -config ~/.cache/wal/colors-rofi-dark.rasi
super + c
	rofi -show calc -modi calc -no-show-match -no-sort

# Fn Keys
# XF86Sleep
#	systemctl suspend-then-hibernate
XF86MonBrightnessDown
	xbacklight -dec 4
XF86MonBrightnessUp
	xbacklight -inc 4
XF86ScreenSaver
	sleep 1; xset dpms force off
XF86TouchpadToggle
	touchpad-toggle.sh
XF86AudioMute
	amixer set Master toggle && play '/usr/share/sounds/freedesktop/stereo/audio-volume-change.oga'
XF86AudioLowerVolume
	amixer set Master 5%- unmute && play '/usr/share/sounds/freedesktop/stereo/audio-volume-change.oga'
XF86AudioRaiseVolume
	amixer set Master 5%+ unmute && play '/usr/share/sounds/freedesktop/stereo/audio-volume-change.oga'
Print
	dm-maim

# dm-player
super + shift + p
	mpvctl.sh -s "${XDG_CACHE_HOME}/mpv-ipc-socket" -p
super + less
	mpvctl.sh -s "${XDG_CACHE_HOME}/mpv-ipc-socket" -b
super + greater
	mpvctl.sh -s "${XDG_CACHE_HOME}/mpv-ipc-socket" -f
super + colon
	mpvctl.sh -s "${XDG_CACHE_HOME}/mpv-ipc-socket" -r

# Applications
super + Return
	$MYTERM
alt + e
	$MYTERM -t FM -e ranger
alt + v
	$MYTERM -e nvim
super + alt + h
	$MYTERM -t Htop -e htop
super + b
	qutebrowser --qt-flag ignore-gpu-blocklist --qt-flag enable-gpu-rasterization --qt-flag enable-native-gpu-memory-buffers --qt-flag num-raster-threads=4
super + alt + c
	qalculate-gtk

# Toggling stuff
super + shift + b
	rfkill toggle bluetooth
super + shift + w
	rfkill toggle wifi
super + shift + u
	touchpad-toggle.sh
super + shift + v
	camtoggle.sh
super + shift + m
	mictoggle.sh
super + shift + n
	killall redshift || redshift &

# Dmenu
super + shift + Return
	dmenu_run 'Run: ' -l 20 -g 3 -X 0 -Y 0 -W 680
	# dmenu_run -i -l 20 -fn Mononoki -g 3 -X 0 -Y 0 -W 680 -p 'Run: '
super + p; a
	jerry -D -c
super + p; b
	dm-bookman
super + p; shift + b
	dm-setbg
super + p; c
	dm-colpick
super + p; shift + c
	dm-clip
super + p; d
	dm-dict
super + p; shift + d
	dm-documents
super + p; e
	dm-confedit
super + p; shift + e
	dm-emoji
super + p; f
	dm-usbmount -m
super + p; shift + f
	dm-usbmount -u
super + p; h
	dm-hub
super + p; i
	dm-wifi
super + p; shift + i
	dm-ip
super + p; k
	dm-kill
super + p; l
	dm-wordsearch
super + p; m
	dm-music
super + p; shift + m
	dm-man
super + p; n
	dm-note
